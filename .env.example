# === Email Engine Configuration ===

# API
API_KEY=changeme-generate-a-strong-key
HOST=0.0.0.0
PORT=8000

# Database (SQLite)
DATABASE_URL=sqlite:///./email_engine.db

# PowerMTA
PMTA_CONFIG_PATH=/etc/pmta/config
PMTA_BIN_PATH=/usr/sbin/pmta

# MailWizz MySQL
MAILWIZZ_DB_HOST=127.0.0.1
MAILWIZZ_DB_PORT=3306
MAILWIZZ_DB_USER=mailwizz
MAILWIZZ_DB_PASSWORD=
MAILWIZZ_DB_NAME=mailwizz

# Telegram Alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Scraper-Pro Integration (bounce forwarding)
SCRAPER_PRO_BOUNCE_URL=https://scraper.example.com/api/v1/contacts/bounce-feedback
SCRAPER_PRO_HMAC_SECRET=

# Blacklist
BLACKLIST_CHECK_INTERVAL_HOURS=4

# Warmup quotas (per phase)
WARMUP_WEEK1_QUOTA=50
WARMUP_WEEK2_QUOTA=200
WARMUP_WEEK3_QUOTA=500
WARMUP_WEEK4_QUOTA=1500
WARMUP_WEEK5_QUOTA=5000
WARMUP_WEEK6_QUOTA=10000
WARMUP_MAX_BOUNCE_RATE=5.0
WARMUP_MAX_SPAM_RATE=0.1

# IP Rotation
IP_QUARANTINE_DAYS=30
IP_REST_DAYS=7

# Grafana (for docker-compose)
GRAFANA_ADMIN_PASSWORD=admin
